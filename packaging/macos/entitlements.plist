<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- App Sandbox: Disabled because app needs full file system access for clinical trial data -->
    <key>com.apple.security.app-sandbox</key>
    <false/>

    <!-- Network: Required for GitHub update checking -->
    <key>com.apple.security.network.client</key>
    <true/>

    <!-- File Access: Required for opening/saving study files via native dialogs -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>

    <!-- Downloads: Required for exporting XPT files to Downloads folder -->
    <key>com.apple.security.files.downloads.read-write</key>
    <true/>
</dict>
</plist>
