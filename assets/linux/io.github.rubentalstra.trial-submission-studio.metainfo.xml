        <control>pointing</control>
        <control>keyboard</control>
    </supports>

    <content_rating type="oars-1.1"/>

    <releases>
        <release version="0.0.2-alpha.5" date="2026-01-17">
            <description>
                <p>Alpha release with core SDTM transformation features:</p>
                <ul>
                    <li>CSV import with automatic column detection</li>
                    <li>Fuzzy column mapping to SDTM variables</li>
                    <li>Export to XPT, Dataset-XML, Define-XML 2.1</li>
                    <li>Offline validation with embedded CDISC standards</li>
                </ul>
            </description>
        </release>
    </releases>
</component>
