<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
    <id>io.github.rubentalstra.trial-submission-studio</id>

    <name>Trial Submission Studio</name>
    <summary>Transform clinical trial data into FDA-compliant CDISC formats</summary>

    <metadata_license>CC0-1.0</metadata_license>
    <project_license>MIT</project_license>

    <developer id="io.github.rubentalstra">
        <name>Ruben Talstra</name>
    </developer>

    <branding>
        <color type="primary" scheme_preference="light">#3B82F6</color>
        <color type="primary" scheme_preference="dark">#1E40AF</color>
    </branding>

    <description>
        <p>
            Trial Submission Studio transforms clinical trial data into FDA-compliant
            CDISC SDTM formats. Works completely offline with embedded standards.
        </p>
        <p>
            Import CSV files and map columns to SDTM variables using intelligent fuzzy
            matching. Apply transformation rules and validate against CDISC controlled
            terminology.
        </p>
        <p>
            Export to XPT (SAS Transport V5/V8), Dataset-XML, or Define-XML 2.1 for
            regulatory submission.
        </p>
    </description>

