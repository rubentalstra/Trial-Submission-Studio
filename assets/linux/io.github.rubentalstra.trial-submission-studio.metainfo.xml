        <screenshot>
            <image>https://raw.githubusercontent.com/rubentalstra/Trial-Submission-Studio/refs/heads/main/assets/screenshots/validation.png</image>
            <caption>CDISC validation results</caption>
        </screenshot>
    </screenshots>

    <url type="homepage">https://github.com/rubentalstra/Trial-Submission-Studio</url>
    <url type="bugtracker">https://github.com/rubentalstra/Trial-Submission-Studio/issues</url>
    <url type="vcs-browser">https://github.com/rubentalstra/Trial-Submission-Studio</url>

    <launchable type="desktop-id">io.github.rubentalstra.trial-submission-studio.desktop</launchable>

    <provides>
        <binary>trial-submission-studio</binary>
    </provides>

    <categories>
        <category>Science</category>
        <category>Office</category>
        <category>DataVisualization</category>
    </categories>

    <keywords>
        <keyword>CDISC</keyword>
        <keyword>SDTM</keyword>
        <keyword>clinical trial</keyword>
